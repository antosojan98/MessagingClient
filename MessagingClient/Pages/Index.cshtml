@page
@model IndexModel
@using MessagingLibrary;
@using MessagingLibrary.Data
@{
    ViewData["Title"] = "Home page";

    List<MessageData> messages = await MessagingAPI.GetMessages();

    int unreadMessagesCount = 0;
    foreach (MessageData item in messages)
    {
        if (!item.messageRead)
            unreadMessagesCount++;
    }
}

<!-- Stylesheet for the page -->
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<!-- Section for the popup that is added to nav from the shared layout -->
@section Popup {
    <button type="button" id="popupButton">
        <img src="~/images/notification_icon.png" />
        <span id="popupBadge">0</span>
    </button>

    <div id="popupBox">
        @foreach (MessageData item in messages)
        {
            var bgColor = item.messageRead ? "#e6e6e6" : "white";

            <div id="popupItem" style="background:@bgColor">
                <p>
                    @item.content &emsp;
                </p>
                <p>
                    @item.sentTime.ToShortDateString() &emsp;
                </p>
                @if (!item.messageRead)
                {
                    <img src="~/images/check.png" id="popupReadIcon" onclick="markMessageRead(this, @item.id)" />
                }
            </div>
        }
    </div>
}


    <div class="text-center">
        <h1 class="display-4" style="padding-top:30vh" id="loginIntro">Messaging Hub Login</h1>
        <br>
        <br>

        <form id="loginForm">
            <label for="message">User Content:</label>
            <input type="text" id="userName" name="userName">
            <br>
            <br>
            <input type="button" value="Submit" onclick="loginUser()">
        </form>
    </div>


    <!-- Script for opening/closing the popup -->
    <script src="~/js/indexPopup.js" asp-append-version="true"></script>

    <!-- Script for loading items, login -->
    <script src="~/js/index.js" asp-append-version="true"></script>